<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="quake.dhsdevelopers.org.quake">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BeforeActivity"></activity>
        <activity android:name=".AfterActivity"></activity>
        <activity android:name=".SheltersActivity"></activity>
        <activity android:name=".KitsActivity"></activity>
        <activity android:name=".MedicalActivity"></activity>
        <activity android:name=".BasicsActivity"></activity>
        <activity android:name=".LocalActivity"></activity>
        <activity android:name=".MedicalInfoActivity"></activity>
        <activity android:name=".BasicsInfo"></activity>
    </application>

</manifest>
