<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/test"
        android:layout_gravity="center"
        android:layout_weight=".4"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_weight=".3"
        android:text="@string/before_title"
        android:textSize="20sp"
        android:id="@+id/beforeButton"
        android:onClick="before"
        android:background="#FF5722"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_weight=".3"
        android:text="@string/after_title"
        android:textSize="20sp"
        android:id="@+id/afterButton"
        android:onClick="after"
        android:background="#4CAF50"/>

</LinearLayout>
