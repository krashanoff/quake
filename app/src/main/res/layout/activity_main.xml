<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" tools:context=".MainActivity"
    android:background="#FFFF">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/home_logo"
        android:layout_gravity="center"
        android:layout_weight=".3"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_weight=".3"
        android:text="@string/before_title"
        android:textSize="@dimen/button_font_size"
        android:id="@+id/beforeButton"
        android:onClick="before"
        android:background="#03A9F4"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_weight=".3"
        android:text="@string/after_title"
        android:textSize="@dimen/button_font_size"
        android:id="@+id/afterButton"
        android:onClick="after"
        android:background="#F44336"/>

</LinearLayout>
